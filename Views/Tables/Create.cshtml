@model Restoran.Models.Table

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/RestoranAdmin/Shared/_AdminLayout.cshtml";
}

<h1>Create</h1>

<h4>Table</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TableName" class="control-label"> Masa Adı</label>
                <input asp-for="TableName" class="form-control" />
                <span asp-validation-for="TableName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TableNumber" class="control-label"> Masa numarası (öneri: masa numaraları farklı olması şart)</label>
                <input asp-for="TableNumber" class="form-control" />
                <span asp-validation-for="TableNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Qrcode" class="control-label">Koltuk Sayı</label>
                <input asp-for="Qrcode" class="form-control" />
                <span asp-validation-for="Qrcode" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geriye git</a>
</div>

