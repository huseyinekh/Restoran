@model IEnumerable<Table> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/RestoranAdmin/Shared/_AdminLayout.cshtml";
}

    <!-- TABLES -->
    <div class="container align-items-start justify-content-center d-flex mt-5 pt-5 mb-5">
        <div class="usr_type" data-type="garson"></div>
        <div class="row ">
            @foreach (var item in Model)
            {
                <div class="col justify-content-center  ">
                    <div class="item my-3  ">
                        <div class="card " style="width: 15rem;min-height: 20rem;">
                            <div class="card-header   bg_own">
                                <p data-name="@item.TableNumber" class="text-light customer_table">@item.TableName</p>
                                <div class="scroll-container">
                                    <span data-name="@item.TableNumber" class="nofitication_badge un_reserve_badge badge badge-pill badge-primary">boş</span>
                                    <span data-name="@item.TableNumber" class="nofitication_badge  reserve_badge badge badge-pill badge-success">dolu</span>
                                    <span data-name="@item.TableNumber" class="nofitication_badge garson_badge badge badge-pill badge-danger">garson</span>
                                    <span data-name="@item.TableNumber" class="nofitication_badge  checkout_badge badge badge-pill badge-info">hesap</span>
                                </div>
                            </div>
                            <div class="d-flex justify-content-center">
                                <img src="~/assets/image/@item.ImageLink"
                                     class="card-img-top px-3 py-1 img-thumbnail small_image"
                                     alt="..." />
                            </div>
                            <div class="card-body events-container ">
                                <h5 class="card-title text-center "> <i class="fas fa-users"></i> <small>4-2</small> | <small> <i class="far fa-clock"></i> 1</small> </h5>

                                <button type="button" class="un_reserve btn btn-sm  btn-outline-primary my-1">
                                    Boş
                                </button>
                                <button type="button"
                                        class=" reserve btn float-right btn-sm  btn-outline-success my-1">
                                    Dolu
                                </button>
                                <!-- <button type="button" class="btn btn-sm  btn-outline-danger my-1">Danger</button> -->
                                <button type="button" class="  garson  btn btn-sm  btn-outline-danger my-1">
                                    Garson
                                </button>
                                <button type="button"
                                        class="checkout btn btn-sm  btn-outline-info my-1 float-right">
                                    Hesap
                                </button>
                            </div>
                            <!-- collapse -->@{var dataTable=item.TableNumber;
                            <div class="accordion" id="accordionExample">
                                <div class="card">
                                    <div class="card-header" id="headingThree">
                                        <h2 class="mb-0 justify-content-center d-flex ">
                                            <button  style="width:100%;  background-color: #3a0808;"
                                                    class="more btn btn-dark bg-gradient-dark collapsed"
                                                    type="button"
                                                    data-toggle="collapse"; 
                                                      
                                                    data-target="#@dataTable"
                                                    aria-expanded="false"
                                                    aria-controls="@dataTable">
                                                <span  class=" float-rignt badge message-span  badge-pill badge-danger">1</span>
                                                <p class="float-left">Mesaj gönder...</p>
                                            </button>
                                        </h2>
                                    </div>
                                    <div id="@dataTable"
                                         class="collapse"
                                         aria-labelledby="headingThree"
                                         data-parent="#accordionExample">
                                        <div class="card-body">
                                            <div class="messages">
                                                <div data-name="@dataTable" class=" messageList my-3 message_cotainer flex-column  d-flex justify-content-start">

                                                    <p class="align-self-end my-1 p-1 rounded customer_msg bg-secondary text-light" id="w3mission" rows="4" cols="50">
                                                        <i class="fas fa-user"></i>
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="sendMessageContainer">
                                                <form class="form-inline d-flex justify-content-center">
                                                    <div class="form-group mx-sm-3 mb-2">
                                                        <input class="user_input" type="hidden" value="@dataTable" id="userInput" />
                                                        <label for="messageInput" class="sr-only">Message</label>
                                                        <input id=" messageInput" autocomplete="off" type='text' class=" msg_input form-control" placeholder="message">
                                                    </div>
                                                    <button data-type="restoran_user" id="sendButton" type="button" class=" send_message_btn btn btn-primary mb-2">Send</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- collapse end -->
                            }
                        </div>
                    </div>
                </div>
            }
            <!-- 1 -->
   

        </div>
        </div>


       